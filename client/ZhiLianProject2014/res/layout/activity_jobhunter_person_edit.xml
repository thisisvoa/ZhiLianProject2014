<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/jobhunter_person_edit_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_height" >

        <TextView
            android:id="@+id/jobhunter_person_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑个人" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_horizontal_margin"
                android:layout_marginRight="@dimen/item_horizontal_margin"
                android:background="@drawable/shape_normal_item"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/item_horizontal_margin"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/item_imageview_width_big"
                        android:layout_height="@dimen/item_imageview_height_big"
                        android:scaleType="centerInside"
                        android:src="@drawable/jobhunter_person_contact" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="个人信息"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_imageview_margin_vertical_small"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="@dimen/item_imageview_width_small"
                            android:layout_height="@dimen/item_imageview_height_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/item_imageview_margin_right_small"
                            android:scaleType="centerInside"
                            android:src="@drawable/jobhunter_person" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/item_imageview_margin_right_medium"
                            android:gravity="left"
                            android:text="姓名" />

                        <EditText
                            android:id="@+id/jobhunter_person_edit_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"
                            android:inputType="text"
                            android:maxLength="10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="@dimen/item_imageview_width_small"
                            android:layout_height="@dimen/item_imageview_height_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/item_imageview_margin_right_small"
                            android:scaleType="centerInside"
                            android:src="@drawable/jobhunter_phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/item_imageview_margin_right_medium"
                            android:gravity="left"
                            android:text="手机" />

                        <EditText
                            android:id="@+id/jobhunter_person_edit_userphone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_horizontal_margin"
                android:layout_marginRight="@dimen/item_horizontal_margin"
                android:layout_marginTop="@dimen/item_vertical_margin"
                android:background="@drawable/shape_normal_item"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/item_horizontal_margin"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/item_imageview_width_big"
                        android:layout_height="@dimen/item_imageview_height_big"
                        android:scaleType="centerInside"
                        android:src="@drawable/jobhunter_person_demand" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="求职意向"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_imageview_margin_vertical_small"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="@dimen/item_imageview_width_small"
                            android:layout_height="@dimen/item_imageview_height_small"
                            android:layout_marginRight="@dimen/item_imageview_margin_right_small"
                            android:scaleType="centerInside"
                            android:src="@drawable/recruiter_job" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/item_imageview_margin_right_medium"
                                android:gravity="left"
                                android:text="职位类别" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <Spinner
                                    android:id="@+id/jobhunter_person_edit_userdemand_field"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="left" />

                                <Spinner
                                    android:id="@+id/jobhunter_person_edit_userdemand_job"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left" />
                            </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_imageview_margin_vertical_small"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="@dimen/item_imageview_width_small"
                            android:layout_height="@dimen/item_imageview_height_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/item_imageview_margin_right_small"
                            android:scaleType="centerInside"
                            android:src="@drawable/recruiter_experience" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/item_imageview_margin_right_medium"
                            android:gravity="left"
                            android:text="相关经验" />

                        <EditText
                            android:id="@+id/jobhunter_person_edit_userdemand_experience"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"
                            android:inputType="number"
                            android:maxLength="2" />
                        
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="年" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_imageview_margin_vertical_small"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="@dimen/item_imageview_width_small"
                            android:layout_height="@dimen/item_imageview_height_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/item_imageview_margin_right_small"
                            android:scaleType="centerInside"
                            android:src="@drawable/recruiter_salary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/item_imageview_margin_right_medium"
                            android:gravity="left"
                            android:text="期望月薪" />

                        <EditText
                            android:id="@+id/jobhunter_person_edit_userdemand_salary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"
                            android:inputType="number"
                            android:maxLength="9" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <ImageView
                android:id="@+id/jobhunter_person_edit_check"
                android:layout_width="@dimen/activity_imagebutton_width"
                android:layout_height="@dimen/activity_imagebutton_height"
                android:layout_marginTop="@dimen/item_vertical_margin"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/selecter_check" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
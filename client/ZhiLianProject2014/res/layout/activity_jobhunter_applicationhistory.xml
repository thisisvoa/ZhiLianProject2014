<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/jobhunter_applicationhistory_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_height"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/jobhunter_applicationhistory_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="投递历史" />
    </RelativeLayout>

    <ListView
        android:id="@+id/jobhunter_applicationhistory_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/jobhunter_applicationhistory_top"
        android:layout_marginLeft="@dimen/item_horizontal_margin"
        android:layout_marginRight="@dimen/item_horizontal_margin"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="@dimen/listview_dividerheight"
        android:drawSelectorOnTop="false"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>